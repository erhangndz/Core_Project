@model EntityLayer.Concrete.ContactInfo
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<div class="card-header border-0">
    <div class="card-header bg-transparent border-0">
        <h3 class="text-white mb-0">İletişim Bilgileri Düzenleme Paneli</h3>
    </div>
</div>

<form action="/ContactInfo/Index/" method="post">
    @Html.HiddenFor(x=>x.ContactInfoID)
    <label>Başlık</label>
    @Html.TextBoxFor(x=>x.Title,new{@class="form-control"})
    <br />
    <label>Açıklama</label>
    @Html.TextAreaFor(x=>x.Description,6,1,new{@class="form-control"})
    <br />
    <label>Mail</label>
    @Html.TextBoxFor(x=>x.Mail,new{@class="form-control"})
    <br />
    <label>Telefon</label>
    @Html.TextBoxFor(x=>x.Phone,new{@class="form-control"})
    <br />
    <button class="btn btn-outline-primary">Güncelle</button>

</form>

