@model List<EntityLayer.Concrete.Experience>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Deneyim Listesi</h3>
</div>
<!-- Light table -->
<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="sort" data-sort="name">#</th>
                <th scope="col" class="sort" data-sort="budget">Şirket</th>
                <th scope="col" class="sort" data-sort="status">Unvan</th>
                <th scope="col" class="sort">Sil</th>
                <th scope="col" class="sort">Düzenle</th>


            </tr>
        </thead>
        <tbody class="list">
            @foreach (var item in Model)
            {


                <tr>
                    <th scope="row">
                        @item.ExperienceID
                    </th>
                    <th class="budget">
                        @item.Name
                    </th>

                    <td>
                       @item.Date
                    </td>
                   
                    <td>
                        <a href="/Experience/DeleteExperience/@item.ExperienceID" class="btn btn-danger">Sil</a>
                    </td>
                    <td>
                        <a href="/Experience/UpdateExperience/@item.ExperienceID" class="btn btn-info">Düzenle</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a href="/Experience/AddExperience" class="btn btn-primary">Yeni Deneyim Ekle</a>
</div>

