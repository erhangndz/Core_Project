@model List<EntityLayer.Concrete.WriterMessage>
@{
    ViewData["Title"] = "Inbox";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
    int count = 0;
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Gelen Mesajlar</h4>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Konu</th>
                            <th>Gönderen</th>
                            <th>Tarih</th>
                            <th>Sil</th>
                            <th>Detaylar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;

                            <tr>
                                <th>@count</th>
                                <td>@item.Subject</td>
                                <td>@item.SenderName</td>
                                <td>@(((DateTime)@item.Date).ToString("dd-MMM-yyyy"))</td>
                                <td>
                                    <a href="/AdminMessage/DeleteMessage/@item.WriterMessageID" class="btn btn-outline-danger" id="DeleteBtn"
                                       onclick="return confirm('Silmek istediğinize emin misiniz?');">Sil</a>
                                </td>
                                <td><a href="@Url.Action("DeleteMessage", "AdminMessage", new { id = item.WriterMessageID, sourcePage = "Inbox" })" class="btn btn-outline-info">Mesajı Gör</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/AdminMessage/AddMessage" class="btn btn-outline-primary">Yeni Mesaj Oluştur</a>
            </div>
        </div>
    </div>
</div>
