@model List<EntityLayer.Concrete.Portfolio>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="row">
    <div class="col">
        <div class="card bg-default shadow">
            <div class="card-header bg-transparent border-0">
                <h3 class="text-white mb-0">Projelerim</h3>
            </div>
            <div class="table-responsive">
                <table class="table align-items-center table-dark table-flush">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col" class="sort" data-sort="name">Proje</th>
                            <th scope="col" class="sort" data-sort="budget">Ücret</th>
                            <th scope="col" class="sort" data-sort="status">Durum</th>
                           
                            <th scope="col" class="sort" data-sort="completion">Tamamlanma</th>
                            <th scope="col" class="sort">Sil</th>
                            <th scope="col" class="sort">Düzenle</th>
                        </tr>
                    </thead>
                    <tbody class="list">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">
                                    <div class="media align-items-center">
                                        <a href="#" class="avatar rounded-circle mr-3">
                                            <img alt="Image placeholder" src="@item.Platform">
                                        </a>
                                        <div class="media-body">
                                            <span class="name mb-0 text-sm">@item.Name</span>
                                        </div>
                                    </div>
                                </th>
                                <td class="budget">
                                    @item.Price
                                </td>
                                <td>
                                    <span class="badge badge-dot mr-4">
                                        <i class="bg-success"></i>
                                        <span class="status">Tamamlandı</span>
                                    </span>
                                </td>
                     
                                <td>
                                    <div class="progress">
                                        <div class="progress-bar bg-secondary" role="progressbar" style="width: @item.Value%" aria-valuenow="@item.Value" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </td>
                        
                                <td><a href="/Portfolio/DeletePortfolio/@item.PortfolioID" class="btn btn-outline-danger"  id="DeleteBtn"
                                       onclick="return confirm('Silmek istediğinize emin misiniz?');">Sil</a>
                                </td>
                                <td><a href="/Portfolio/UpdatePortfolio/@item.PortfolioID" class="btn btn-outline-info">Düzenle</a></td>
                            </tr>
                        }
                       
              
                    </tbody>
                </table>
                
            </div>
           
        </div>
        <a href="/Portfolio/AddPortfolio" class="btn btn-outline-primary">Yeni Proje Ekle</a>
    </div>
</div>


