@model EntityLayer.Concrete.About
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}




<div class="card-header border-0">
    <div class="card-header bg-transparent border-0">
        <h3 class="text-white mb-0">Hakkımda Düzenleme Paneli</h3>
    </div>
</div>

<form action="/About/Index/" method="post">
    @Html.HiddenFor(x=>x.AboutID)
    <label>Başlık</label>
    @Html.TextBoxFor(x=>x.Title,new{@class="form-control"})
    <br />
    <label>Açıklama</label>
    @Html.TextAreaFor(x=>x.Description,10,1,new{@class="form-control"})
    <br />
    <label>Yaş</label>
    @Html.TextBoxFor(x=>x.Age,new{@class="form-control"})
    <br />
    <label>Mail</label>
    @Html.TextBoxFor(x=>x.Mail,new{@class="form-control"})
    <br />
    <label>Telefon</label>
    @Html.TextBoxFor(x=>x.Phone,new{@class="form-control"})
    <br />
    <label>Adres</label>
    @Html.TextBoxFor(x=>x.Address,new{@class="form-control"})
    <br />
    <label>Görsel URL</label>
    @Html.TextBoxFor(x=>x.ImageURL,new{@class="form-control"})
    <br />
    <button class="btn btn-outline-primary">Güncelle</button>

</form>