@model List<EntityLayer.Concrete.Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<div class="card-header border-0">
    <h3 class="mb-0">Hizmet Listesi</h3>
</div>
<!-- Light table -->
<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-dark">
            <tr>
                <th scope="col" class="sort" data-sort="name">#</th>
                <th scope="col" class="sort" data-sort="budget">Başlık</th>
              
                <th scope="col" class="sort">Sil</th>
                <th scope="col" class="sort">Düzenle</th>


            </tr>
        </thead>
        <tbody class="list">
            @foreach (var item in Model)
            {


                <tr>
                    <th scope="row">
                        @item.ServiceID
                    </th>
                    <th class="budget">
                        @item.Title
                    </th>

               

                    <td>
                        <a href="/Service/DeleteService/@item.ServiceID" class="btn btn-outline-danger" id="DeleteBtn"
                           onclick="return confirm('Silmek istediğinize emin misiniz?');">Sil</a>
                    </td>
                    <td>
                        <a href="/Service/UpdateService/@item.ServiceID" class="btn btn-outline-info">Düzenle</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a href="/Service/AddService" class="btn btn-outline-primary">Yeni Hizmet Ekle</a>
</div>



