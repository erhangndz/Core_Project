@model EntityLayer.Concrete.Skill
@{
    ViewData["Title"] = "UpateSkill";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3>Yetenek Düzenleme Sayfası</h3>
</div>
<br />
<br />
<form action="/Skill/UpdateSkill/" method="post">
    @Html.HiddenFor(x=>x.SkillID)
    <label>Başlık</label>
    @Html.TextBoxFor(x=>x.Title,new{@class="form-control"})
    <br />
    <label>Oran</label>
    @Html.TextBoxFor(x=>x.Value,new{@class="form-control"})
    <br />
    <button class="btn btn-primary">Kaydet</button>

</form>

