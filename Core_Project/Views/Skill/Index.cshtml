@model List<EntityLayer.Concrete.Skill>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Yetenek Listesi</h3>
</div>
<!-- Light table -->
<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-dark">
            <tr>
                <th scope="col" class="sort" data-sort="name">#</th>
                <th scope="col" class="sort" data-sort="budget">Başlık</th>
                <th scope="col" class="sort" data-sort="status">Oran</th>
                <th scope="col" class="sort">Sil</th>
                <th scope="col" class="sort">Düzenle</th>


            </tr>
        </thead>
        <tbody class="list">
            @foreach (var item in Model)
            {


                <tr>
                    <th scope="row">
                        @item.SkillID
                    </th>
                    <td class="budget">
                        @item.Title
                    </td>

                    <td>
                        <div class="progress">
                            <div class="progress-bar bg-success" role="progressbar" style="width: @item.Value%" aria-valuenow="@item.Value" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </td>
                    <td>
                        <a href="/Skill/DeleteSkill/@item.SkillID" class="btn btn-outline-danger" id="DeleteBtn"
                           onclick="return confirm('Silmek istediğinize emin misiniz?');">Sil</a>
                    </td>
                    <td>
                        <a href="/Skill/UpdateSkill/@item.SkillID" class="btn btn-outline-info">Düzenle</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
   
    <a href="/Skill/AddSkill" class="btn btn-outline-primary">Yeni Yetenek Ekle</a>
</div>
