@model List<EntityLayer.Concrete.Portfolio>
@{
    var status="";
}

<div class="col-md-8 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="d-flex flex-row justify-content-between">
                <h4 class="card-title mb-1">Son Projelerim</h4>
                <p class="text-muted mb-1">Proje Durumu</p>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="preview-list">
                        @foreach (var item in Model)
                        {
                            if(item.Status==true){ status = "Tamamlandı"; } else{ status = "Devam Ediyor"; }

                        <div class="preview-item border-bottom">
                            <div class="preview-thumbnail">
                                <div class="preview-icon bg-primary">
                                    <img src="@item.Platform"></img>
                                </div>
                            </div>
                            <div class="preview-item-content d-sm-flex flex-grow">
                                <div class="flex-grow">
                                    <h6 class="preview-subject">@item.Name</h6>
                                        <p class="text-muted">Fiyatı: @item.Price</p>
                                </div>
                                <div class="mr-auto text-sm-right pt-2 pt-sm-0">
                                    <p class="text-muted">@status</p>
                                        <p class="text-muted mb-0">Tamamlanma Oranı: @item.Value</p>
                                   
                                    
                                </div>
                            </div>
                        </div>
               }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
