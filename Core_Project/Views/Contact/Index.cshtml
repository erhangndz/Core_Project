@model List<EntityLayer.Concrete.Message>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
    int count = 0;
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">İletişim</h4>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Ad Soyad</th>
                            <th>Mail</th>
                            <th>Tarih</th>
                            <th>Sil</th>
                            <th>Mesajı Gör</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;

                            <tr>
                                <th>@count</th>
                                <td>@item.Name</td>
                                <td>@item.Mail</td>
                                <td>@(((DateTime)@item.Date).ToString("dd-MMM-yyyy"))</td>
                                <td>
                                    <a href="/Contact/DeleteContact/@item.MessageID" class="btn btn-outline-danger" id="DeleteBtn"
                                       onclick="return confirm('Silmek istediğinize emin misiniz?');">Sil</a>
                                </td>
                                <td><a href="/Contact/ContactDetails/@item.MessageID" class="btn btn-outline-info">Mesajı Gör</a></td>
                               
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



