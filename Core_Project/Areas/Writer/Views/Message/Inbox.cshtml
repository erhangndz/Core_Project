@model List<EntityLayer.Concrete.WriterMessage>
@{
    ViewData["Title"] = "Inbox";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
    int count = 0;
}



<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Gelen Mesajlar</h4>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Konu</th>
                            <th>Tarih</th>
                            <th>Gönderen</th>
                            <th>Detaylar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            @* if (item.Status == "Yeni Yazı") { color = "danger"; }
                            if (item.Status == "Yeni Video") { color = "warning"; }
                            if (item.Status == "Konferans") { color = "info"; }
                            if (item.Status == "Workshop") { color = "success"; }
                            if (item.Status == "Bootcamp") { color = "primary"; }*@
                            <tr>
                                <th>@count</th>
                                <td>@item.Subject</td>
                                <td>@(((DateTime)@item.Date).ToString("dd-MMM-yyyy"))</td>
                                <td>@item.Sender</td>
                               @* <td><label class="badge badge-info">@item.Status</label></td>*@
                                <td><a href="/Writer/Message/MessageDetails/@item.WriterMessageID" class="btn btn-outline-dark">Mesajı Gör</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

