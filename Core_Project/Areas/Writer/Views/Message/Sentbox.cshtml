@model List<EntityLayer.Concrete.WriterMessage>
@{
    ViewData["Title"] = "Sentbox";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
    int count = 0;
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Gönderilen Mesajlar</h4>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Konu</th>
                            <th>Alıcı</th>
                            <th>Tarih</th>
                            <th>Detaylar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                           
                            <tr>
                                <th>@count</th>
                                <td>@item.Subject</td>
                                <td>@item.ReceiverName</td>
                                <td>@(((DateTime)@item.Date).ToString("dd-MMM-yyyy"))</td>
                                <td><a href="/Writer/Message/SentMessageDetails/@item.WriterMessageID" class="btn btn-outline-dark">Mesajı Gör</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



